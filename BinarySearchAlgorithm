  
     public  static int  BinarySearchDescending(int[] s,int e)
    {

     
        int n = s.Length-1;
        int i = 0,m=0;
        while (i<=n)
        {
           m = (i + n) / 2;            
           if(s[m]>e)
            {
                i = m + 1;
            }
            else
            {
                n = m - 1;
            }
          

        }
        return i;
    }
    
   

    ---------------------------------------------------------------------------------------------------------------------------------------
    
  public static int BinarySearchAscending(int[] s, int e)
        {


            int n = s.Length - 1;
            int i = 0, m = 0;
            while (i <= n)
            {
                m = (i + n) / 2;
                if (s[m] < e)
                {
                    i = m + 1;
                }
                else
                {
                    n = m - 1;
                }


            }
            return i;
        }
